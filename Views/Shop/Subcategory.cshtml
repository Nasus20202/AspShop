@using ShopWebApp
@model SubcategoryModel
@{
    Layout = "_Layout";
    int c = 0;
}
<div class="row">
@foreach (Product prod in Model.Products)
{
    if(c == 3)
    {
        @:</div>
        @:<div class="row">
        c = 0;
    } c++;
    <div class="col-lg-4 d-flex align-items-stretch" style="padding-left: 5px; padding-right: 5px">
        <div class="card" style="margin-top: 10px;">
            <img class="card-img-top" src="/images/@prod.Photo" alt="@prod.Code" style="margin-top: 10px">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@prod.Brand @prod.Name</h5>
                <p class="card-text">@prod.About</p>
                @{ 
                    double price = prod.Price / 100.0;
                } 

                <a href="#" class="btn btn-outline-primary mt-auto">@price zł</a>
            </div>
        </div>
    </div>
}
</div>
