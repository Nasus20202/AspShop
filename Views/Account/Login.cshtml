@model ShopWebApp.LoginModel
@{
    Layout = "_Layout";
}
<br /><br />
<h2 style="text-align:center">Zaloguj się</h2>
<br />

<form asp-controller="Account" asp-action="Login" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1" asp-for="Login">Adres email</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <!--<small id="emailHelp" class="form-text text-muted"></small>-->
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1" asp-for="Password">Hasło</label>
        <input type="password" class="form-control" id="exampleInputPassword1">
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1" asp-for="RememberMe">
        <label class="form-check-label" for="exampleCheck1">Zapamiętaj mnie</label>
    </div>
    <br />
    <button type="submit" class="btn btn-primary btn-lg btn-block">Zaloguj się</button>
</form>
<a href="@Url.Action("register", "account")" class="btn btn-outline-primary btn-lg btn-block" style="margin-top: 7px">Nie masz konta? Zarejestruj się</a>