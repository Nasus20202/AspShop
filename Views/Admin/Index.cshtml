@using ShopWebApp
@{
    Layout = "_AdminLayout";
}

<br />
<h2 style="text-align:center">Obsługa klientów</h2>
<br />

@{ 
    string ordersPath = "#";
    string customOrdersPath = "#";
    string usersPath = Url.Action("table", "admin") + "/users/";
    string productsPath = "#";
    string subcategoriesPath = "#";
    string categoriesPath = Url.Action("table", "admin") + "/categories/";
}

<ul class="list-group">
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <a href="@ordersPath" class="text-dark">Zamówienia</a>
        <span class="badge badge-success badge-pill">3</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <a href="@customOrdersPath" class="text-dark">Zamówienia niestandardowe</a>
        <span class="badge badge-success badge-pill">1</span>
    </li>
    @if (Functions.permissionLevel(Model.User.Role) >= 3){ 
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <a href="@usersPath" class="text-info">Użytkownicy</a>
    </li>
    }
</ul>
<br />
<h2 style="text-align:center">Struktura sklepu</h2>
<br />
<ul class="list-group">
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <a href="@productsPath" class="text-dark">Produkty</a>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <a href="@subcategoriesPath" class="text-info">Podkategorie</a>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <a href="@categoriesPath" class="text-info">Kategorie</a>
    </li>
</ul>