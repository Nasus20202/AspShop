@using Microsoft.AspNetCore.Http;
@using ShopWebApp
@model OrderModel
@{
    Layout = "_OrderLayout";
}
@section top {
    <div class="jumbotron">
        <h1 class="display-3 text-center">Zamówienie</h1>
    </div>
}


@if (Context.User.Identity.IsAuthenticated)
{
<div class="alert alert-success alert-dismissible fade show" role="alert">
    Jesteś zalogowany! Twoje zamówienie zostanie zapisane na twoim koncie.
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
}
else
{

<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <a href="@Url.Action("login", "account")?ReturnUrl=/order" class="nounderline text-dark">
        Zaloguj się, aby zapisać zamówienie na swoim koncie.
    </a>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

}

<form method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="ClientName">Imię</label>
            <input type="text" class="form-control" id="ClientName" asp-for="@Model.Order.ClientName" value="@Model.User.Name" required>
        </div>
        <div class="form-group col-md-6">
            <label for="ClientSurname">Nazwisko</label>
            <input type="text" class="form-control" id="ClientSurname" asp-for="@Model.Order.ClientSurname" value="@Model.User.Surname" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Email">Kontaktowy adres email</label>
            <input type="text" class="form-control" id="Email" asp-for="@Model.Order.ClientEmail" value="@Model.User.Email" required>
        </div>
        <div class="form-group col-md-6">
            <label for="Phone">Numer telefonu</label>
            <input type="text" class="form-control" id="Phone" asp-for="@Model.Order.ClientPhone" value="@Model.User.Phone" required>
        </div>
    </div>
    <div class="form-group">
        <label for="Address">Adres</label>
        <input type="text" class="form-control" id="Address" asp-for="@Model.Order.Address" value="@Model.User.Address">
    </div>
</form>


<div class="row">
    <div class="col-sm-4">
        <a href="@Url.Action("cart", "shop")" class="btn btn-outline-primary btn-block btn-lg margin-mobile">Powrót do sklepu</a>
    </div>
    <div class="col-sm-8">
        <a href="" class="btn btn-success btn-block btn-lg margin-mobile">Przejdź do podsumowania</a>
    </div>
</div>
